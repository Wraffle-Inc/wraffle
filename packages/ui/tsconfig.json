{
	"extends": "@wraffle/typescript-config/storybook.json",
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".storybook/**/*.ts",
		".storybook/**/*.tsx"
	],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/ui/*": ["./src/ui/*"],
			"@/shared/*": ["./src/shared/*"],
			"@/widgets/*": ["./src/widgets/*"]
		}
	}
}
