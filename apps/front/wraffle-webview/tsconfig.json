{
  "extends": "@wraffle/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/app/*": [
        "./src/app/*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/widgets/*": [
        "./src/widgets/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/entities/*": [
        "./src/entities/*"
      ]
    },
    "incremental": true,
    "noEmit": true,
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
